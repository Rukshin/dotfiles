[user]
	name = Jordi Pulido
	email = jpulidofontalba@gmail.com

[includeIf "gitdir:/Users/jordi.pulido/Code/mine/"]
	path = /Users/jordi.pulido/.dotfiles/git/.gitconfig-mine

# Personal dotfiles
[includeIf "gitdir:/Users/jordi.pulido/.dotfiles/"]
	path = /Users/jordi.pulido/.dotfiles/git/.gitconfig-mine

[includeIf "gitdir:/Users/jordi.pulido/Code/Adevinta/"]
	path = /Users/jordi.pulido/.dotfiles/modules/private/git/.gitconfig-adevinta

[fetch]
	prune = true

[push]
	default = simple
	autoSetupRemote = true

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes
	editor = vim
	autocrlf = input
	trustctime = false
	precomposeunicode = false
	pager = delta --dark
	ignorecase = false

[help]
	autocorrect = 20

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true

[diff]
	tool = vimdiff
	compactionHeuristic = true
	indentHeuristic = true

[difftool]
	prompt = false

[diff "json"]
	textconv = python -m json.tool

[diff "word"]
	textconv = docx2txt

[credential]
	helper = osxkeychain

[color]
	ui = always

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[apply]
	whitespace = fix
[pull]
	rebase = true
[rebase]
	autoStash = true
	autosquash = true
[rerere]
	enabled = true
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[protocol]
	version = 2
[gitreview]
	remote = origin
	notopic = true
[url "git@github.mpi-internal.com:"]
	insteadOf = https://github.mpi-internal.com
